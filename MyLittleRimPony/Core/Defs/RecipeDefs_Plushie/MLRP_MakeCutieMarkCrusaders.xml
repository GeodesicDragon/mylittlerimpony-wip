		<label>Make Cutie Mark Crusaders</label>
		<description>Make a Cutie Mark Crusaders plushie.</description>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Textiles</li>
						<li>Leathers</li>
					</categories>
				</filter>
				<count>900</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Textiles</li>
				<li>Leathers</li>
			</categories>
		</fixedIngredientFilter>
		<products>
			<PonyPlush_CutieMarkCrusaders>1</PonyPlush_CutieMarkCrusaders>
		</products>
		<skillRequirements>
			<Crafting>5</Crafting>
		</skillRequirements>
	</RecipeDef>
	
